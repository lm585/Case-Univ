cat  temp-plasm6-3bcell.txt | awk '
BEGIN {FS = "\t"; OFS = ""; ORS =""}
{
 print "signedFDR" "\t";
 print $2 ;
 for(i = 6; i <= NF; i = i+6)
 {
  lg = log($i) /log(10) ;
  if(lg < -3) lg = -3;
  if($(i-1) == "NA")
    lg = 0;
  else if($(i-1) > 0) ####logFC > 0
    lg = -lg;
  else
    temp = 1
  print "\t" lg;
 }
 print "\n";
}'


